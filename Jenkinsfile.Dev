pipeline {
  environment {
    registry = "eran101/morse-server"
    registryCredential = 'dockerhub_id'
    dockerImage = 'latest'
  }
  agent any
    stages {
        stage('Git clone') {
            steps {
                git url: 'https://github.com/eran101/morse-server.git', 
                branch: 'main'
            }
        }
    }
}
    stage('Building server image') {
      steps {
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Deploy server image') {
      steps {
        script {
          docker.withRegistry('', registryCredential) {
            dockerImage.push()
          }
        }
      }
    }
